<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Main">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sale System.BR"
            android:layout_margin="50dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/novopedido"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="Novo Pedido"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnfaturado"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="Faturado"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btnestoque"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="Estoque Produtos"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cadcliente"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="Cadastro Clientes"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnrelatorio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="Relatorio Vendas"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btnsuporte"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="Suporte"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF9800"
            android:hint="Sair"
            android:textAlignment="center"
            android:textColorHint="#F7F4F4"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>